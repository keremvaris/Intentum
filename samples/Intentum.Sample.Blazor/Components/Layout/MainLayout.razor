@inherits LayoutComponentBase

<div class="dashboard-app">
    <aside class="dashboard-sidebar">
        <div class="sidebar-brand">
            <a href="/" class="brand-link">Intentum</a>
            <span class="tagline">Intent Intelligence Hub</span>
        </div>
        <nav class="sidebar-nav">
            <div class="accordion-group">
                <button type="button" class="accordion-header @(_openInfer ? "open" : "")" @onclick="@(() => _openInfer = !_openInfer)">
                    <span>Infer & Decide</span>
                    <span class="accordion-chevron">▼</span>
                </button>
                <div class="accordion-content @(_openInfer ? "open" : "")">
                    <NavLink href="sandbox" class="sidebar-link">Playground</NavLink>
                    <NavLink href="explain" class="sidebar-link">Explain</NavLink>
                    <NavLink href="policy-lab" class="sidebar-link">Policy Lab</NavLink>
                </div>
            </div>
            <div class="accordion-group">
                <button type="button" class="accordion-header @(_openAnalyze ? "open" : "")" @onclick="@(() => _openAnalyze = !_openAnalyze)">
                    <span>Analyze</span>
                    <span class="accordion-chevron">▼</span>
                </button>
                <div class="accordion-content @(_openAnalyze ? "open" : "")">
                    <NavLink href="" Match="NavLinkMatch.All" class="sidebar-link">Overview</NavLink>
                    <NavLink href="graph" class="sidebar-link">Graph</NavLink>
                    <NavLink href="timeline" class="sidebar-link">Timeline</NavLink>
                    <NavLink href="heatmap" class="sidebar-link">Heatmap</NavLink>
                    <NavLink href="signals" class="sidebar-link">Signals</NavLink>
                </div>
            </div>
            <div class="accordion-group">
                <button type="button" class="accordion-header @(_openUseCases ? "open" : "")" @onclick="@(() => _openUseCases = !_openUseCases)">
                    <span>Use Cases</span>
                    <span class="accordion-chevron">▼</span>
                </button>
                <div class="accordion-content @(_openUseCases ? "open" : "")">
                    <NavLink href="fraud-live" class="sidebar-link">Intent Stream</NavLink>
                    <NavLink href="sustainability" class="sidebar-link">Sustainability</NavLink>
                    <NavLink href="commerce" class="sidebar-link">Commerce</NavLink>
                </div>
            </div>
            <div class="accordion-group">
                <button type="button" class="accordion-header @(_openConfig ? "open" : "")" @onclick="@(() => _openConfig = !_openConfig)">
                    <span>Config</span>
                    <span class="accordion-chevron">▼</span>
                </button>
                <div class="accordion-content @(_openConfig ? "open" : "")">
                    <NavLink href="settings" class="sidebar-link">Settings</NavLink>
                </div>
            </div>
        </nav>
    </aside>
    <div class="dashboard-body">
        <main class="dashboard-main">
            @Body
        </main>
    </div>
</div>

@code {
    private bool _openInfer = true;
    private bool _openAnalyze = true;
    private bool _openUseCases = true;
    private bool _openConfig = true;
}
